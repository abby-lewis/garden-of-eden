[Unit]
Description=MQTT Service
Requires=pigpiod.service
After=network.target pigpiod.service

[Service]
User=gardyn
WorkingDirectory=/home/gardyn/garden-of-eden
ExecStart=/home/gardyn/garden-of-eden/venv/bin/python /home/gardyn/garden-of-eden/mqtt.py
Restart=always

[Install]
WantedBy=multi-user.target
