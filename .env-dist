# device infor for homeassistant
MQTT_IDENTIFIER=gardyn_04
MQTT_BASETOPIC=gardyn
MQTT_DEVICE_MODEL="gardyn 4.0"
MQTT_VERSION="1.0.0"

# MQTT broker config
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=gardyn
MQTT_PASSWORD=somepassword
MQTT_KEEPALIVE_INTERVAL=60

WATER_LOW_CM=11

UPPER_CAMERA_DEVICE=/dev/video0
LOWER_CAMERA_DEVICE=/dev/video2
UPPER_IMAGE_PATH=/tmp/upper_camera.jpg
LOWER_IMAGE_PATH=/tmp/lower_camera.jpg
CAMERA_RESOLUTION="1920x1080"
# If a camera reports "Unable to find a compatible palette format", set its palette (e.g. MJPEG)
# UPPER_CAMERA_PALETTE=MJPEG
# LOWER_CAMERA_PALETTE=MJPEG
IMAGE_INTERVAL_SECONDS=3600
# Camera: where to save "Capture & save" photos (relative = relative to project root; default project_root/photos)
CAMERA_PHOTOS_DIR=photos
# Optional: set if you start the app from a different directory so CAMERA_PHOTOS_DIR resolves correctly
# GARDYN_PROJECT_ROOT=/home/gardyn/projects/garden-of-eden
SENSOR_TYPE=DHT20

# Passkey auth (SQLite + WebAuthn)
SECRET_KEY=change-me-to-a-random-secret-in-production
AUTH_ENABLED=true
# WEBAUTHN_RP_ID: hostname only, no port (e.g. manliestben.zapto.org or localhost). Port is stripped if you add it.
WEBAUTHN_RP_ID=localhost
# WEBAUTHN_ORIGIN: full origin of the dashboard (e.g. https://your-host:8444 or http://localhost:5173)
WEBAUTHN_ORIGIN=http://localhost:5173
WEBAUTHN_RP_NAME=Garden of Eden
JWT_EXPIRY_HOURS=24
# Comma-separated emails allowed to register and sign in (leave empty to allow any single user)
ALLOWED_EMAILS=abbylewis001@gmail.com,benjamintmanley@gmail.com